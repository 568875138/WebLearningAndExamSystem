div(class="header")
    div(class="logo")
        div(class="pull-right mt-15 mr-10" uib-dropdown)
            a(href="#" uib-dropdown-toggle)
                i(class="fa fa-fw fa-user-o" )
                i(class="fa fa-fw fa fa-caret-down")
            ul(class="dropdown-menu" uib-dropdown-menu)
                li(role="menuitem")
                    a 姓名：{{userInfo.name}}
                li(role="menuitem")
                    a 账号：{{userInfo.id}}
                li(class="divider")
                li(role="menuitem")
                    a(ng-click="logout()" ui-sref="login" class="text-center")
                        i(class="fa fa-fw fa-sign-out")
                        span  退出登录

ul(ng-if="userInfo.level == 2" class="nav nav-pills nav-stacked navbar-inverse navbar-fixed-top myNav navNarrow text-center" responsive-navigation)
    li(role="presentation" ng-model="checked" uib-btn-radio="'learning-system'")
        a(ui-sref="logined.learningSystem.myCourses")
            span(class="glyphicon glyphicon-book" aria-hidden="true")
                span(ng-if="showDetail")  学习系统
    li(role="presentation" ng-model="checked" uib-btn-radio="'exercise-system'")
        a(ui-sref="logined.exerciseSystem.myExerciseBank")
            span(class="glyphicon glyphicon-tasks" aria-hidden="true")
                span(ng-if="showDetail")  题库系统
    li(role="presentation" ng-model="checked" uib-btn-radio="'exam-system'")
        a(href="#")
            span(class="glyphicon glyphicon-pencil" aria-hidden="true")
                span(ng-if="showDetail")  考试系统
    li(role="presentation" ng-model="checked" uib-btn-radio="'my-infomation'")
        a(href="#")
            span(class="glyphicon glyphicon-info-sign" aria-hidden="true")
                span(ng-if="showDetail")  个人资料
    li(role="presentation" ng-model="checked" uib-btn-radio="'users-management'")
        a(ui-sref="logined.usersManagement.addUser")
            span(class="glyphicon glyphicon-user" aria-hidden="true")
                span(ng-if="showDetail")  用户管理
    li(role="presentation" ng-model="checked" uib-btn-radio="'message-center'")
        a(href="#")
            span(class="glyphicon glyphicon-comment" aria-hidden="true")
                span(ng-if="showDetail")  通知中心

div
    div(class="input-group mb-10 pull-right courseMembersFilter")
        div(class="input-group-btn" uib-dropdown)
            button(class="btn btn-default" uib-dropdown-toggle)
                span 学号
                i(class="fa fa-fw fa-caret-down")
            ul(class="dropdown-menu" uib-dropdown-menu role="menu")
                li(role="menuitem")
                    a(ng-repeat="option in options" ng-click="changeFileterCondition(option.key)") {{option.value}}
        input(ng-model="filterValue" class="form-control")
        div(class="input-group-btn")
            button(class="btn btn-primary") 搜索
    table(class="table table-hover table-bordered")
        thead
            tr
                th(class="text-center") 学号
                th(class="text-center") 姓名
                th(class="text-center") 学院
                th(class="text-center") 专业
                th(class="text-center") 年级
                th(class="text-center") 班级
                th(class="text-center") 操作
        tbody
            tr(ng-repeat="student in students" class="text-center")
                td {{student.sid}}
                td {{student.sname}}
                td {{student.college}}
                td {{student.major}}
                td {{student.grade}}
                td {{student.class}}
